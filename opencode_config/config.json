{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "zhipu": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Zhipu AI (GLM-4.7)",
      "options": {
        "baseURL": "https://open.bigmodel.cn/api/paas/v4",
        "apiKey": "{env:ZHIPU_API_KEY}"
      },
      "models": {
        "glm-4.7": {
          "name": "GLM-4.7"
        }
      }
    }
  },
  "model": "zhipu/glm-4.7",
  "permission": {
    "read": "allow",
    "write": "allow",
    "edit": "allow",
    "bash": "allow"
  },
  "mcp": {
    "zai-vision": {
      "type": "local",
      "command": ["npx", "-y", "@z_ai/mcp-server@latest"],
      "environment": {
        "Z_AI_API_KEY": "{env:ZHIPU_API_KEY}",
        "Z_AI_MODE": "ZAI"
      }
    },
    "zread": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/zread/mcp",
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:ZHIPU_API_KEY}"
      }
    }
  }
}
