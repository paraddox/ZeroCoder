{
  "$schema": "https://opencode.ai/config.json",
  "model": "zai-coding-plan/glm-4.7",
  "provider": {
    "zai-coding-plan": {
      "models": {
        "glm-4.7": {
          "options": {
            "thinking": {
              "type": "enabled",
              "clear_thinking": false
            }
          }
        }
      }
    }
  },
  "permission": {
    "read": "allow",
    "write": "allow",
    "edit": "allow",
    "bash": "allow"
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "mcp": {
    "vision": {
      "type": "local",
      "command": ["npx", "-y", "@z_ai/mcp-server"],
      "environment": {
        "Z_AI_API_KEY": "{env:ZHIPU_API_KEY}",
        "Z_AI_MODE": "ZAI"
      },
      "enabled": true
    },
    "zread": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/zread/mcp",
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:ZHIPU_API_KEY}"
      },
      "enabled": true
    }
  }
}
